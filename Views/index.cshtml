<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Weekday Calculator</title>
	</head>
	<body>
		<div class="container">
			<div class="jumbotron">
				<h1>Weekday Calculator</h1>
			</div>
			<div class="row">
				<div class="col-md-12">
				 	<form action="/" method="post">
						<label for="userInput">Enter a date</label>
						<br>
						<input type="number" name="Month" placeholder="mm" min="1" max="12">
						/
						<input type="number" name="Day" placeholder="dd" min="1" max="31">
						/
						<input type="number" name="Year" placeholder="yyyy" min="0" max="5000">
						<br><br>
						<button type="submit">Enter</button>
				 	</form>
				</div>
			</div>
			<div class="row">
				@if (Model[0] == "true")
				{
					<p>That date is a @Model[1].</p>
				}
			</div>
		</div>
	</body>
</html>
